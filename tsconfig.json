{
  "compilerOptions": {
    "allowJs": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "lib",
    "noEmit": false,
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}